                            android:maxLength="14"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15sdp" />

                        <TextView
                            android:id="@+id/saveChangesOnDeviceNameFromSettingsScreen"
